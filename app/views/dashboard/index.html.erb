<h2 id="dashboard-title">Dashboard  for user <strong><%=@current_user.username%></strong></h2>

<div class="row">


<div class="col-4 mx-5">
  <h3>My Participations</h3>
  <hr>
  <% @participations.each do |roleplay, amount| %>

      <div class="card roleplay-card" >
        <div class="row">
          <div class="col-3">
            <%= image_tag(roleplay.image(:thumb), class: "rounded") %>
          </div>

          <div class="col-9">
          <div class="row">
            <div class="col-10 center-in-me-please">
              <h5 class="card-text">
                <% if roleplay.online %>
                <a href="/roleplays/<%=roleplay.id%>"><%= roleplay.name %></a>
                    <% else %>
                 <div class="text-muted"><%= roleplay.name %></div>
                    <% end %>
              </h5>
            </div>
            <div class="col-2 center-in-me-please">
              <% if roleplay.user == current_user %>
                <a href="/roleplays/<%= roleplay.id %>/edit"><img src="images/settings.png"></a>
              <% end %>
          </div>
          </div>
          </div>


        </div>
      </div>



  <% end %>
</div>
  <div class="col-4 mx-5">
    <h3>More</h3>
    <hr>
    <a href="/roleplay/new" class="btn btn-info">Create new roleplay...</a><br>
  </div>
</div>
